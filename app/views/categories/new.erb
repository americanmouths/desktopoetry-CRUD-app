<center>
<div id='flash' class='notice'>
  <% if flash.has?(:message) %>
   <%= flash[:message] %>
  <% end %>
</div>

<h1>Create a New Category</h1>
<form method="POST" action="/categories">

  <h4>Name</h4>
  <input type="text" name="category[name]">
  <br>

  <h4>Select Poems to Assign to This Category</h4>
    <% if !current_user.poems.all.empty? %>
     <% current_user.poems.all.each do |poem| %>
       <input type="checkbox" name="category[poems][][id]" value="<%= poem.id %>">
       <%=poem.title%><br>
     <% end %>
    <% else %>
     <%= "There are no poems to assign to this category" %>
    <% end %>
  <br><br>

  <input type="submit" value="Submit Category">
</form>

<br><br>
<a href="/categories">See all categories</a>
<br><br>
<a href="/users/<%= current_user.username %>">Home</a><br>
</center>
