<h1>Create a New Category</h1>
<% if flash.has?(:error) %>
 <%= flash[:error] %>
<% end %>
<form method="POST" action="/categories">
  <h4>Name</h4>
  <input type="text" name="category[name]">
  <br>
  <h4>Select a Poem to Assign to This Category</h4>
    <% if !Poem.all.empty? %>
     <% Poem.all.each do |poem| %>
       <input type="checkbox" name="category[poems][][title]" value="<%= poem.id %>" <%= 'checked' if Poem.all.include?(poem) %>>
       <%=poem.title%>
     <% end %>
    <% else %>
     <%= "There are no poems to assign to this category" %>
    <% end %>
 <br><br>
  <input type="submit" value="Submit Category">
</form>
<a href="/categories/<%= @category.id =>/edit">Edit this category</a>
<br><br>
<a href="/categories">See all categories</a>
