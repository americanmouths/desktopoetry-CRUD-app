<center><h1> Welcome <%= @user.username.capitalize %>! </h1>
<% if !@user.poems.empty? %>
  <h2>Here are your poems:</h2>
  <% @user.poems.each do |poem| %>
    <ul>
      <li><a href="/poems/<%=poem.id%>"><%= poem.title %></a></li>
    </ul>
  <% end %>
<% else %>
  <%= "Looks like you don't have any poems yet" %>
<% end %>

<% if !@user.categories.empty? %>
  <h2>Here are your categories:</h2>
  <% @user.categories.each do |category| %>
    <ul>
      <li><a href="/categories/<%=category.id%>"><%= category.name %></a></li>
    </ul>
  <% end %>
<% else %>
<%= "Looks like you don't have any categories yet" %>
<% end %>
<br><br><br>


<a href="/poems/new">Create A New Poem</a><br>
<a href="/categories/new">Create A New Category</a><br>
<a href="/logout">Log Out</a>
</center>
